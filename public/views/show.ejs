<head>
    <div class="banner">
        <img class="banner-img" src="/images/Su15_RN_Vomero_W_Hero_Tight_hd_1600.jpeg">
      </div>

</head>
<div class="heading">My Collection</div>
<div class="show-body">
  
    
    <div class = "show-wrapper">
      <div class = "show-card">
        <!-- card left -->
        <div class = "product-imgs">
          <div class = "img-display">
            <div class = "img-showcase">
              <img src="<%= sneaker.img%>" alt = "shoe image"class="show-img">
              
            </div>
          </div>
          <div class = "img-select">
            <div class = "img-item">
              <a href = "<%= sneaker.lnk1%>" data-id = "1">
                <img class="show-img"src = "<%= sneaker.imgL %>" alt = "shoe image">
              </a>
            </div>
            <div class = "img-item">
              <a href = "<%= sneaker.lnk2%>" data-id = "2">
                <img class="show-img" src = "<%= sneaker.imgCL %>" alt = "shoe image">
              </a>
            </div>
            <div class = "img-item">
              <a href = "<%= sneaker.lnk3%>" data-id = "3">
                <img class="show-img"src = "<%= sneaker.imgCR %>" alt = "shoe image">
              </a>
            </div>
            <div class = "img-item">
              <a href = "<%= sneaker.lnk4%>" data-id = "4">
                <img class="show-img" src = "<%= sneaker.imgR %>" alt = "shoe image">
              </a>
            </div>
          </div>
        </div>
        <!-- card right -->
        <div class = "sneaker-content">
            <h1 style="font-family: 'Permanent Marker', cursive;"class="sneaker-brand"> <%= sneaker.brand %></h1>
          <h2 class = "sneaker-name"><%= sneaker.name %></h2>
          

          <div class="sneaker-detail">
            <h2 style="font-family: 'Permanent Marker', cursive;">ABOUT THIS SNEAKER:</h2>
            <h3><%= sneaker.colorWay %></h3>
            <h3><%= sneaker.size%></h3>
            <h3><%= sneaker.condition%></h3>
                
            <% if (sneaker.worn > 0) { %>
                <h3> worn: <%= sneaker.worn %></h3>
                <form action="/sneaker/<%= sneaker.id %>/show?_method=PUT" method="POST"></form>

                  <% } else { %>
                        <h3>need to wear</h3>
            <% } %>
                        
                   
                  
                  
            
          </div>
          <a href ="/sneaker/<%= sneaker.id %>/edit" class = "sneaker-link">Edit Sneaker</a>
          <div class= "delete-sneaker">
            <form style ="text-align: left;" action="/sneaker/<%=sneaker.id%>?_method=DELETE" method="POST">
              <input class="delete" type="submit" value='DELETE'></form>
             
          </div>

           </div>
           
      </div>
      
    </div>
  </div>
  

    
 


    
    
</div>



    

 

